<h1 class="text-center">Log In</h1>
<div class="container">





<%= form_with(scope: :session,url: login_path, local: true) do |f| %>
   
  <div class="row mb-3">
     <%=f.label :username, class: "col-2 col-form-label" %><br/>
     <div class="col-10">
     <%=f.text_field :username,class: "form-control",placeholder: "username" %>
     </div>
    </div>

    <div class="row mb-3">
     <%=f.label :password,class: "col-2 col-form-label" %><br/>
     <div class="col-10">
     <%=f.password_field :password,class: "form-control",placeholder: "password" %>
     </div>
    </div>

    

    <div class="text-center">
     <%=f.submit "LogIn",class:"btn btn-primary btn-lg" %>
    </div>

<% end%>
</div>