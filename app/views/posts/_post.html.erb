<div class="container">
<% @posts.each do |p| %>
    <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
<div class="card text-center shadow  mb-5 bg-body rounded">
  <div class="card-header">
    <%= p.user.username %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= p.title %></h5>
    <p class="card-text"><%= truncate(p.description,length: 30) %></p>
    
    <%= link_to 'Show', post_path(p.id),class:"btn btn-primary" %>
    <% if logged_in && p.user == current_user %>
     <%= link_to 'Edit', edit_post_path(p.id),class:"btn btn-primary" %>
     <%= link_to 'Delete', post_path(p), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete },class:"btn btn-primary"  %>
    <% end %>
  </div>
  <div class="card-footer text-muted">
    2 days ago
  </div>
  </div>
</div>
</div>
<% end %>
</div>